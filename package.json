{
  "name": "use-spy",
  "version": "0.0.0",
  "description": "Patternless state management for React.",
  "main": "./lib/main/index.js",
  "types": "./lib/main/index.d.ts",
  "module": "./lib/module/index.js",
  "author": "Dmitry Steblyuk",
  "license": "MIT",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "yarn build:clean && yarn build:main && yarn build:module",
    "build:main": "tsc --project tsconfig-main.json",
    "build:module": "tsc --project tsconfig-module.json",
    "build:clean": "rimraf lib",
    "test": "yarn test:types && yarn test:unit",
    "test:types": "tsc --noEmit",
    "test:unit": "jest --passWithNoTests",
    "publish": "semantic-release"
  },
  "optionalDependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "jest": "^26.6.3",
    "react": "^17.0.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.2",
    "typescript": "^4.2.4"
  },
  "release": {
    "repositoryUrl": "git@github.com:dmitrysteblyuk/use-spy.git",
    "branches": ["master", "next"],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
